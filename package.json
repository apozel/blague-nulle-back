{
    "name": "express-ts-template",
    "version": "1.2.0",
    "description": "Simple back-end server to serve https://www.blague-nulle.fr",
    "main": "server.js",
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts",
        "serve": "node dist/index.js",
        "test": "jest --coverage=false --verbose",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "watch-node": "nodemon dist/index.js",
        "build-ts": "tsc --project './tsconfig.json'",
        "dev": "tsc --project './tsconfig.json' --watch & NODE_ENV=development nodemon dist",
        "watch-ts": "tsc -w",
        "lint": "eslint src/*.ts",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/index.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "typecheck": "tsc --noEmit",
        "run-prettier": "prettier src/*.ts",
        "validate-prettiness": "yarn run-prettier -c",
        "make-prettier": "yarn run-prettier --write"
    },
    "author": "Apozel",
    "license": "ISC",
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.16",
        "@types/express-status-monitor": "^1.3.0",
        "@types/helmet": "^4.0.0",
        "@types/http-errors": "^2.0.1",
        "@types/lusca": "^1.7.1",
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "concurrently": "^8.0.1",
        "eslint": "^8.32.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-import": "^2.27.5",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.3",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-status-monitor": "^1.3.4",
        "helmet": "^6.0.1",
        "lusca": "^1.7.0"
    }
}
